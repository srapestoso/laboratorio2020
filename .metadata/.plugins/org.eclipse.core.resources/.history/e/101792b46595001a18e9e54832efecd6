#include <stdio.h>
#include <ctype.h>

int esPar(int n)
{
	int retorno = 0;

	if(n%2==0)
	{
		retorno = 1;
	}
	else{retorno = 0;

	}
	return retorno;
}

int main () {
   int n = 5;

   int r;

   r = esPar(n);

   printf("%d", r);

   return(0);
}

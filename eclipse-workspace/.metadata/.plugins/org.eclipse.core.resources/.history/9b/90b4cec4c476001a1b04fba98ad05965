#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int utn_getNumero(int* pResultado, char* mensaje,char* mensajeError, int minimo, int maximo, int reintentos){
	int ret;
	int num;

		while(reintentos>0)
		{
			printf("Ingrese un numero");

			scanf("%d", &num);
				if(num<=maximo && num>=minimo){
					break;}
			reintentos--;
			printf("Error\n");
		}
				if(reintentos==0)
				{
					ret=-1;
				}
				else{
					ret=0;
					*pResultado=num;
				}
				return ret;
}

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int utn_getNumero(int* pResultado, char* mensaje,char* mensajeError, int minimo, int maximo, int reintentos){
	int ret;
	int num;

		while(reintentos>0)
		{
			printf("%s", mensaje);
			fflush(stdin);
			if(getInt(&num)==1)
			{
				char buffer[64];
				scanf("%s", buffer);
				*pResultado=atoi(buffer);
				if(esNumerica(buffer)){break;}
				return 1;
			}
			if(num<=maximo && num>=minimo){
					break;}
			reintentos--;
			printf("Error\n");
		}
				if(reintentos==0)
				{
					ret=-1;
				}
				else{
					ret=0;
					*pResultado=num;
				}
				fflush(stdin);
				return ret;
}

static int esNumerica(char* cadena)
{
	int ret=-1;
	int i=0;
	if(cadena!=NULL){
		while(cadena[i]!='\0'){
			if(cadena[i]<'0' || cadena[i]>'9')
			{break;}
			i++;
		}
		if(cadena[i]=='\0'){
			ret=1;
		}
		return ret;


}

static int getInt(int* pResultado){
	int ret=-1;
	char buffer[6];
	scanf("%s", buffer);
	if (esNumerica(buffer)){
		*pResultado=atoi(buffer);
		ret=1;
	}
	return ret;
}
	}
}
